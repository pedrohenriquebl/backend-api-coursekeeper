generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String    @unique
  password     String    @unique
  cpf          String    @unique
  profileImage String?
  description  String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?

  courses Course[]
  goals   Goal[]
}

model Course {
  id             Int          @id @default(autoincrement())
  name           String
  platform       Platform
  platformCustom String? // caso platform = OUTROS
  duration       Int          @default(0)
  studiedHours   Int          @default(0)
  topic          Topic
  topicCustom    String? // caso topic = OUTROS
  progress       Int          @default(0)
  rating         Int          @default(0)
  comment        String?
  status         CourseStatus
  startDate      DateTime
  endDate        DateTime?
  description    String?
  instructor     String?
  language       Language?
  languageCustom String? // caso language = OUTROS

  user   User @relation(fields: [userId], references: [id])
  userId Int

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Goal {
  id          Int        @id @default(autoincrement())
  isActive    Boolean    @default(true)
  title       String
  type        GoalType
  target      Int
  current     Int        @default(0)
  unit        GoalUnits
  topic       Topic?
  deadline    DateTime
  status      GoalStatus
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  completedAt DateTime?
  description String?

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

enum Topic {
  FRONTEND
  BACKEND
  DEVOPS
  FULLSTACK
  MOBILE
  DATASCIENCE
  DESIGN
  OUTROS
}

enum Platform {
  EDX
  UDEMY
  ALURA
  ROCKETSEAT
  COURSERA
  VUEMASTERY
  YOUTUBE
  OUTROS
}

enum CourseStatus {
  NAO_INICIADO
  EM_PROGRESSO
  CONCLUIDO
  NAO_CONCLUIDO
}

enum GoalType {
  HORAS_TOTAIS
  HORAS_TOPICO
  CURSOS_CONCLUIDOS
  PERIODO_ESTUDO
}

enum GoalStatus {
  ATIVA
  CONCLUIDA
  VENCIDA
}

enum GoalUnits {
  HORAS
  CURSOS
  DIAS
}

enum Language {
  PORTUGUES
  INGLES
  ESPANHOL
  FRANCES
  OUTROS
}
